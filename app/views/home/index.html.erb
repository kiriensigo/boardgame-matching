<div class="container">
  <h1>Board Game Matching</h1>

  <% if user_signed_in? %>
    <p>ようこそ、<%= current_user.email %> さん</p>
    <%= button_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <div class="auth-options">
      <h2>ログイン方法を選択</h2>
      <%= link_to 'メールアドレスでログイン', new_user_session_path, class: 'btn btn-primary' %>
      <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, class: 'btn btn-danger' %>
      <%= link_to '新規登録', new_user_registration_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>